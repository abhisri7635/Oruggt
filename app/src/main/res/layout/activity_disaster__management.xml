<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    tools:context="cse.fet.gkv.oruggt.Disaster_Management">


        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/disaster1"
            android:onClick="selectpage" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email"
            android:background="@drawable/savhelp"
            android:onClick="onclickxyz" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/button"
            android:background="@drawable/style2"
            android:fontFamily="serif"
            android:gravity="fill|clip_vertical|clip_horizontal|start|end"
            android:text="ARE YOU CAUGHT IN ANY DANGER"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/style2"
            android:fontFamily="serif"
            android:gravity="fill|clip_vertical|clip_horizontal|start|end"
            android:text="CONTRIBUTE FOR SOMEONE IN DANGER"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"

            android:textStyle="bold" />

</RelativeLayout>
