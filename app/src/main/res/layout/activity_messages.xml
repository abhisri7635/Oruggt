<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBE7"
    tools:context="cse.fet.gkv.oruggt.Messages">

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Edit Message For SOS"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/msgsos"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/textView27"
        android:layout_below="@+id/textView25"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/msgsos"
        android:layout_marginTop="28dp"
        android:text="Edit Message for When you met an Accident"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/msgacc"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/textView27"
        android:layout_below="@+id/textView27"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/msgacc"
        android:layout_marginTop="28dp"
        android:text="Edit Message for Women Safety Feature"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/msgwom"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/msgacc"
        android:layout_below="@+id/textView31"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button8"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_style"
        android:onClick="save"
        android:text="SAVE"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
        android:textColor="#00695C"
        android:textStyle="bold" />
</RelativeLayout>
