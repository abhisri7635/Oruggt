<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context="cse.fet.gkv.oruggt.LoginPage">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sgngoogle"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="casual"
        android:text="@string/logpg"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <EditText
        android:id="@+id/email"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_alignStart="@+id/password"
        android:background="#FFFFE0"
        android:drawableLeft="@drawable/ic_action_email1"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/background_dark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cnfpwd"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="#FFFFE0"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingBottom="5dp"
        android:textColorHint="@android:color/background_dark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cnfpwd"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button6"
        android:layout_alignStart="@+id/password"
        android:layout_marginBottom="11dp"
        android:background="#FFFFE0"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button6"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView17"
        android:layout_alignStart="@+id/sgngoogle"
        android:background="@drawable/button_style"
        android:onClick="sgnem"
        android:text="Sign up"
        android:textColor="#00695C" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sgngoogle"
        android:layout_centerHorizontal="true"
        android:text="OR"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:src="@drawable/imageedit_3_9019656773" />

</RelativeLayout>
